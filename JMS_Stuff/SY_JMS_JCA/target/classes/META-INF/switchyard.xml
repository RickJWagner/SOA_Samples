<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:1.0" name="SY_JMS1" targetNamespace="urn:com.example.switchyard:SY_JMS1:1.0">
    <sca:composite xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" name="SY_JMS1" targetNamespace="urn:com.example.switchyard:SY_JMS1:1.0">
        <sca:service name="Echo" promote="EchoBean/Echo">
            <sca:interface.java interface="com.example.switchyard.SY_JMS1.Echo"/>
            <jca:binding.jca xmlns:jca="urn:switchyard-component-jca:config:1.0">
                <sy:operationSelector xmlns:sy="urn:switchyard-config:switchyard:1.0" operationName="echo"/>
                <jca:inboundConnection>
                    <jca:resourceAdapter name="hornetq-ra.rar"/>
                    <jca:activationSpec>
                        <jca:property name="destinationType" value="javax.jms.Queue"/>
                        <jca:property name="destination" value="fdq1"/>
                    </jca:activationSpec>
                </jca:inboundConnection>
                <jca:inboundInteraction>
                    <jca:listener>javax.jms.MessageListener</jca:listener>
                    <jca:endpoint type="org.switchyard.component.jca.endpoint.JMSEndpoint"/>
                    <jca:transacted>true</jca:transacted>
                </jca:inboundInteraction>
            </jca:binding.jca>
        </sca:service>
        <sca:component name="EchoBean">
            <bean:implementation.bean xmlns:bean="urn:switchyard-component-bean:config:1.0" class="com.example.switchyard.SY_JMS1.EchoBean"/>
            <sca:service name="Echo">
                <sca:interface.java interface="com.example.switchyard.SY_JMS1.Echo"/>
            </sca:service>
        </sca:component>
    </sca:composite>
</switchyard>
